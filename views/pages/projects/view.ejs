    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }
  
  .original-image {
    width: 150px;
    height: 150px;
    border-radius: var(--radius-md);
    overflow: hidden;
  }
  
  .original-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .description-text {
    color: var(--text-secondary);
    line-height: 1.7;
    white-space: pre-wrap;
  }
  
  /* Sidebar */
  .sidebar-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-lg);
  }
  
  .sidebar-card h3 {
    font-size: 1rem;
    margin-bottom: var(--spacing-md);
  }
  
  .detail-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .detail-item {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
  }
  
  .detail-label {
    color: var(--text-muted);
  }
  
  .detail-value {
    font-weight: 500;
    text-transform: capitalize;
  }
  
  .share-link {
    display: flex;
    gap: var(--spacing-sm);
  }
  
  .share-link input {
    flex: 1;
    font-size: 0.8rem;
  }
  
  .empty-text {
    font-size: 0.9rem;
    color: var(--text-muted);
  }
  
  .contractor-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }
  
  .contractor-request {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-sm);
    background: var(--bg-secondary);
    border-radius: var(--radius-sm);
  }
  
  .contractor-info strong {
    display: block;
    font-size: 0.9rem;
  }
  
  .contractor-info .quote {
    font-size: 0.8rem;
    color: var(--accent-primary);
  }
  
  .request-status {
    font-size: 0.75rem;
    text-transform: capitalize;
  }
  
  /* Fullscreen Modal */
  .fullscreen-modal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.95);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    padding: var(--spacing-xl);
  }
  
  .fullscreen-modal.active {
    display: flex;
  }
  
  .fullscreen-modal img {
    max-width: 100%;
    max-height: 100%;
    border-radius: var(--radius-lg);
  }
  
  .close-fullscreen {
    position: absolute;
    top: var(--spacing-xl);
    right: var(--spacing-xl);
    background: var(--bg-card);
    border: none;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    color: var(--text-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  @media (max-width: 1024px) {
    .project-layout {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  const projectId = '<%= project._id %>';
  
  async function generateDesign() {
    const btn = document.getElementById('generate-btn');
    btn.disabled = true;
    btn.innerHTML = '<span class="spinner"></span> Generating...';
    
    try {
      const response = await fetch(`/projects/${projectId}/generate`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });
      
      const data = await response.json();
      
      if (data.success) {
        CraftyCrib.showToast('Design generated successfully!');
        setTimeout(() => window.location.reload(), 1000);
      } else {
        CraftyCrib.showToast(data.error || 'Failed to generate design', 'error');
        btn.disabled = false;
        btn.innerHTML = '<i data-lucide="sparkles"></i> Generate Design';
        lucide.createIcons();
      }
    } catch (err) {
      CraftyCrib.showToast('An error occurred', 'error');
      btn.disabled = false;
      btn.innerHTML = '<i data-lucide="sparkles"></i> Generate Design';
      lucide.createIcons();
    }
  }
  
  function copyShareLink() {
    const input = document.getElementById('share-url');
    input.select();
    document.execCommand('copy');
    CraftyCrib.showToast('Link copied to clipboard!');
  }
  
  async function updateVisibility(visibility) {
    try {
      const response = await fetch(`/api/projects/${projectId}/status`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ visibility })
      });
      CraftyCrib.showToast('Visibility updated');
    } catch (err) {
      CraftyCrib.showToast('Failed to update visibility', 'error');
    }
  }
  
  function viewFullscreen(imageUrl) {
    const modal = document.getElementById('fullscreen-modal');
    const img = document.getElementById('fullscreen-image');
    img.src = imageUrl;
    modal.classList.add('active');
  }
  
  function closeFullscreen() {
    document.getElementById('fullscreen-modal').classList.remove('active');
  }
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeFullscreen();
  });
</script>

