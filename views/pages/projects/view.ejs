    position: relative;
    height: 180px;
  }
  
  .variant-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .variant-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-fast);
  }
  
  .variant-image:hover .variant-overlay {
    opacity: 1;
  }
  
  .variant-info {
    padding: var(--spacing-md);
  }
  
  .variant-info h4 {
    font-size: 0.95rem;
    margin-bottom: var(--spacing-sm);
  }
  
  .empty-designs {
    text-align: center;
    padding: var(--spacing-3xl);
    color: var(--text-muted);
  }
  
  .empty-designs i {
    width: 48px;
    height: 48px;
    margin-bottom: var(--spacing-md);
  }
  
