<div class="conversation-page">
  <div class="conversation-sidebar">
    <div class="sidebar-top">
      <a href="/dashboard/messages" class="back-link">
        <i data-lucide="arrow-left"></i>
        <span>Back to Messages</span>
      </a>
    </div>
    
    <div class="chat-partner">
      <% const otherUser = conversation.participants.find(p => p._id.toString() !== user._id.toString()); %>
      <div class="partner-avatar">
        <% if (otherUser?.avatar) { %>
          <img src="<%= otherUser.avatar %>" alt="<%= otherUser.firstName %>">
        <% } else { %>
          <%= otherUser ? otherUser.firstName.charAt(0) + otherUser.lastName.charAt(0) : 'U' %>
        <% } %>
        <span class="status-indicator online"></span>
      </div>
      <h3><%= otherUser ? otherUser.firstName + ' ' + otherUser.lastName : 'Unknown User' %></h3>
      <span class="partner-role">
        <% if (otherUser?.role === 'contractor') { %>
          <i data-lucide="hard-hat"></i> Contractor
        <% } else { %>
          <i data-lucide="home"></i> Homeowner
        <% } %>
      </span>
    </div>
    
    <div class="partner-actions">
      <button class="action-btn">
        <i data-lucide="phone"></i>
        <span>Call</span>
      </button>
      <button class="action-btn">
        <i data-lucide="video"></i>
        <span>Video</span>
      </button>
      <button class="action-btn">
        <i data-lucide="info"></i>
        <span>Info</span>
      </button>
    </div>
    
    <% if (conversation.project) { %>
      <div class="related-project">
        <h4>Related Project</h4>
        <a href="/projects/<%= conversation.project._id %>" class="project-card-mini">
          <i data-lucide="folder"></i>
          <span><%= conversation.project.title %></span>
          <i data-lucide="external-link"></i>
        </a>
      </div>
    <% } %>
    
    <div class="shared-media">
      <h4>Shared Media</h4>
      <div class="media-grid">
        <div class="media-placeholder">
          <i data-lucide="image"></i>
        </div>
        <div class="media-placeholder">
          <i data-lucide="image"></i>
        </div>
        <div class="media-placeholder">
          <i data-lucide="image"></i>
        </div>
        <div class="media-placeholder more">
          <span>+12</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="conversation-main">
    <div class="chat-header">
      <div class="chat-info">
        <h2><%= otherUser ? otherUser.firstName + ' ' + otherUser.lastName : 'Unknown User' %></h2>
        <span class="chat-status">
          <span class="status-dot"></span>
          Online
        </span>
      </div>
      <div class="chat-actions">
        <button class="topbar-btn" title="Search Messages">
          <i data-lucide="search"></i>
        </button>
        <button class="topbar-btn" title="Pin Chat">
          <i data-lucide="pin"></i>
        </button>
        <button class="topbar-btn" title="More Options">
          <i data-lucide="more-vertical"></i>
        </button>
      </div>
    </div>
    
    <div class="messages-container" id="messages-container">
      <div class="messages-date-divider">
        <span>Today</span>
      </div>
      
      <% if (messages && messages.length > 0) { %>
        <% let lastDate = null; %>
        <% messages.forEach((msg, index) => { %>
          <% const isOwn = msg.sender._id.toString() === user._id.toString(); %>
          <div class="message <%= isOwn ? 'sent' : 'received' %>">
            <% if (!isOwn) { %>
              <div class="message-avatar">
                <%= msg.sender.firstName.charAt(0) %><%= msg.sender.lastName.charAt(0) %>
              </div>
            <% } %>
            <div class="message-content">
              <div class="message-bubble">
                <p><%= msg.content %></p>
              </div>
              <div class="message-meta">
                <span class="message-time"><%= new Date(msg.createdAt).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                <% if (isOwn) { %>
                  <span class="message-status">
                    <i data-lucide="check-check"></i>
                  </span>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-messages">
          <i data-lucide="message-circle"></i>
          <p>No messages yet. Start the conversation!</p>
        </div>
      <% } %>
    </div>
    
    <div class="message-composer">
      <form action="/dashboard/messages/<%= conversation._id %>" method="POST" class="composer-form">
        <div class="composer-tools">
          <button type="button" class="tool-btn" title="Attach File">
            <i data-lucide="paperclip"></i>
          </button>
          <button type="button" class="tool-btn" title="Add Image">
            <i data-lucide="image"></i>
          </button>
        </div>
        
        <div class="composer-input-wrapper">
          <textarea 
            name="content" 
            placeholder="Type your message..." 
            class="composer-input" 
            id="message-input"
            rows="1"
            required
          ></textarea>
        </div>
        
        <div class="composer-actions">
          <button type="button" class="tool-btn" title="Emoji">
            <i data-lucide="smile"></i>
          </button>
          <button type="submit" class="send-btn">
            <i data-lucide="send"></i>
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
.conversation-page {
  height: calc(100vh - 140px);
  display: grid;
  grid-template-columns: 300px 1fr;
  background: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  border: 1px solid var(--border-color);
}

/* Sidebar */
.conversation-sidebar {
  display: flex;
  flex-direction: column;
  background: var(--bg-card);
  border-right: 1px solid var(--border-color);
  padding: var(--spacing-lg);
}

.sidebar-top {
  margin-bottom: var(--spacing-xl);
}

.back-link {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-sm);
  color: var(--text-muted);
  font-size: 0.9rem;
  transition: color var(--transition-fast);
}

.back-link:hover {
  color: var(--accent-primary);
}

.back-link i {
  width: 18px;
  height: 18px;
}

.chat-partner {
  text-align: center;
  margin-bottom: var(--spacing-xl);
}

.partner-avatar {
  width: 80px;
  height: 80px;
  margin: 0 auto var(--spacing-md);
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: var(--radius-xl);
  font-size: 1.5rem;
  font-weight: 700;
  color: #fff;
  position: relative;
}

.partner-avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: var(--radius-xl);
}

.status-indicator {
  position: absolute;
  bottom: 4px;
  right: 4px;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 3px solid var(--bg-card);
}

.status-indicator.online {
  background: var(--success);
}

.chat-partner h3 {
  font-size: 1.1rem;
  margin-bottom: var(--spacing-xs);
}

.partner-role {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-xs);
  color: var(--text-muted);
  font-size: 0.85rem;
}

.partner-role i {
  width: 14px;
  height: 14px;
}

.partner-actions {
  display: flex;
  justify-content: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-xl);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  color: var(--text-secondary);
  font-size: 0.7rem;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.action-btn:hover {
  background: rgba(0, 255, 136, 0.1);
  border-color: var(--accent-primary);
  color: var(--accent-primary);
}

.action-btn i {
  width: 18px;
  height: 18px;
}

.related-project, .shared-media {
  margin-bottom: var(--spacing-lg);
}

.related-project h4, .shared-media h4 {
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
  margin-bottom: var(--spacing-sm);
}

.project-card-mini {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-md);
  font-size: 0.85rem;
  color: var(--text-primary);
  transition: all var(--transition-fast);
}

.project-card-mini:hover {
  border-color: var(--accent-primary);
}

.project-card-mini i {
  width: 16px;
  height: 16px;
}

.project-card-mini i:first-child {
  color: var(--accent-primary);
}

.project-card-mini span {
  flex: 1;
}

.project-card-mini i:last-child {
  color: var(--text-muted);
}

.media-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-xs);
}

.media-placeholder {
  aspect-ratio: 1;
  background: var(--bg-secondary);
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
}

.media-placeholder i {
  width: 18px;
  height: 18px;
}

.media-placeholder.more {
  background: rgba(0, 255, 136, 0.1);
  color: var(--accent-primary);
  font-size: 0.75rem;
  font-weight: 600;
}

/* Main Chat */
.conversation-main {
  display: flex;
  flex-direction: column;
  background: var(--bg-secondary);
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--spacing-xl);
  background: var(--bg-card);
  border-bottom: 1px solid var(--border-color);
}

.chat-info h2 {
  font-size: 1rem;
  margin-bottom: 2px;
}

.chat-status {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  font-size: 0.8rem;
  color: var(--text-muted);
}

.status-dot {
  width: 8px;
  height: 8px;
  background: var(--success);
  border-radius: 50%;
}

.chat-actions {
  display: flex;
  gap: var(--spacing-xs);
}

/* Messages */
.messages-container {
  flex: 1;
  overflow-y: auto;
  padding: var(--spacing-lg);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.messages-date-divider {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
  margin: var(--spacing-md) 0;
}

.messages-date-divider::before,
.messages-date-divider::after {
  content: '';
  flex: 1;
  height: 1px;
  background: var(--border-color);
}

.messages-date-divider span {
  font-size: 0.75rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.message {
  display: flex;
  gap: var(--spacing-sm);
  max-width: 70%;
}

.message.sent {
  margin-left: auto;
  flex-direction: row-reverse;
}

.message-avatar {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: var(--radius-md);
  font-size: 0.75rem;
  font-weight: 700;
  color: #fff;
  flex-shrink: 0;
}

.message-content {
  display: flex;
  flex-direction: column;
}

.message.sent .message-content {
  align-items: flex-end;
}

.message-bubble {
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-lg);
  background: var(--bg-card);
  border: 1px solid var(--border-color);
}

.message.sent .message-bubble {
  background: var(--accent-gradient);
  border: none;
}

.message.sent .message-bubble p {
  color: #000;
}

.message-bubble p {
  font-size: 0.9rem;
  line-height: 1.5;
}

.message-meta {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
  margin-top: 4px;
  padding: 0 var(--spacing-xs);
}

.message-time {
  font-size: 0.7rem;
  color: var(--text-muted);
}

.message-status {
  color: var(--accent-primary);
}

.message-status i {
  width: 14px;
  height: 14px;
}

.no-messages {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: var(--text-muted);
}

.no-messages i {
  width: 48px;
  height: 48px;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

/* Composer */
.message-composer {
  padding: var(--spacing-md) var(--spacing-lg);
  background: var(--bg-card);
  border-top: 1px solid var(--border-color);
}

.composer-form {
  display: flex;
  align-items: flex-end;
  gap: var(--spacing-sm);
  background: var(--bg-secondary);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  padding: var(--spacing-sm);
}

.composer-tools, .composer-actions {
  display: flex;
  gap: var(--spacing-xs);
}

.tool-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  color: var(--text-muted);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.tool-btn:hover {
  background: rgba(255, 255, 255, 0.05);
  color: var(--text-primary);
}

.tool-btn i {
  width: 18px;
  height: 18px;
}

.composer-input-wrapper {
  flex: 1;
}

.composer-input {
  width: 100%;
  padding: var(--spacing-sm);
  background: transparent;
  border: none;
  color: var(--text-primary);
  font-size: 0.9rem;
  resize: none;
  outline: none;
  max-height: 120px;
}

.send-btn {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--accent-gradient);
  border: none;
  border-radius: var(--radius-md);
  color: #000;
  cursor: pointer;
  transition: all var(--transition-fast);
}

.send-btn:hover {
  transform: scale(1.05);
  box-shadow: 0 4px 15px rgba(0, 255, 136, 0.3);
}

.send-btn i {
  width: 18px;
  height: 18px;
}

/* Responsive */
@media (max-width: 900px) {
  .conversation-page {
    grid-template-columns: 1fr;
  }
  
  .conversation-sidebar {
    display: none;
  }
}
</style>

<script>
// Auto-scroll to bottom
const messagesContainer = document.getElementById('messages-container');
if (messagesContainer) {
  messagesContainer.scrollTop = messagesContainer.scrollHeight;
}

// Auto-resize textarea
const messageInput = document.getElementById('message-input');
messageInput?.addEventListener('input', function() {
  this.style.height = 'auto';
  this.style.height = Math.min(this.scrollHeight, 120) + 'px';
});

// Submit on Enter (but Shift+Enter for new line)
messageInput?.addEventListener('keydown', function(e) {
  if (e.key === 'Enter' && !e.shiftKey) {
    e.preventDefault();
    this.closest('form').submit();
  }
});
</script>
