<div class="dashboard">
  <div class="dashboard-header">
    <div>
      <h1>Welcome back, <%= user.firstName %>! ðŸ‘‹</h1>
      <p class="text-muted">Here's what's happening with your projects</p>
    </div>
    <a href="/projects/new" class="btn btn-primary">
      <i data-lucide="plus"></i>
      New Project
    </a>
  </div>
  
  <!-- Stats Cards -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon" style="background: linear-gradient(135deg, #00ff88, #00d4ff);">
        <i data-lucide="folder"></i>
      </div>
      <div class="stat-info">
        <span class="stat-value"><%= stats.totalProjects %></span>
        <span class="stat-label">Total Projects</span>
      </div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon" style="background: linear-gradient(135deg, #7c3aed, #a855f7);">
        <i data-lucide="image"></i>
      </div>
      <div class="stat-info">
        <span class="stat-value"><%= stats.completedDesigns %></span>
        <span class="stat-label">Completed Designs</span>
      </div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon" style="background: linear-gradient(135deg, #f59e0b, #ef4444);">
        <i data-lucide="clock"></i>
      </div>
      <div class="stat-info">
        <span class="stat-value"><%= stats.inProgress %></span>
        <span class="stat-label">In Progress</span>
      </div>
    </div>
    
    <div class="stat-card">
      <div class="stat-icon" style="background: linear-gradient(135deg, #06b6d4, #3b82f6);">
        <i data-lucide="sparkles"></i>
      </div>
      <div class="stat-info">
        <span class="stat-value"><%= user.isPremium ? 'âˆž' : '3' %></span>
        <span class="stat-label">AI Credits Left</span>
      </div>
    </div>
  </div>
  
  <!-- Recent Projects -->
  <div class="dashboard-section">
    <div class="section-header-inline">
      <h2>Recent Projects</h2>
      <a href="/projects" class="btn btn-ghost btn-sm">View All</a>
    </div>
    
    <% if (projects && projects.length > 0) { %>
      <div class="projects-grid">
        <% projects.forEach(project => { %>
          <div class="project-card">
            <div class="project-thumbnail">
              <% if (project.designVariants && project.designVariants.length > 0) { %>
                <img src="<%= project.designVariants[project.designVariants.length - 1].imageUrl %>" alt="<%= project.title %>">
              <% } else if (project.originalImages && project.originalImages.length > 0) { %>
                <img src="<%= project.originalImages[0].url %>" alt="<%= project.title %>">
              <% } else { %>
                <div class="placeholder-thumb">
                  <i data-lucide="image"></i>
                </div>
              <% } %>
              <span class="project-status status-<%= project.status %>"><%= project.status %></span>
            </div>
            <div class="project-info">
              <h3><%= project.title %></h3>
              <div class="project-meta">
                <span><i data-lucide="home"></i> <%= project.roomType %></span>
                <% if (project.style) { %>
                  <span><i data-lucide="palette"></i> <%= project.style %></span>
                <% } %>
              </div>
              <div class="project-actions">
                <a href="/projects/<%= project._id %>" class="btn btn-sm btn-secondary">View</a>
                <% if (project.status === 'completed' || project.status === 'pending') { %>
                  <button class="btn btn-sm btn-primary" onclick="generateDesign('<%= project._id %>')">
                    <i data-lucide="sparkles"></i> Generate
                  </button>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="empty-state">
        <div class="empty-icon">
          <i data-lucide="folder-plus"></i>
        </div>
        <h3>No projects yet</h3>
        <p>Start your first renovation project and see the magic of AI design!</p>
        <a href="/projects/new" class="btn btn-primary">
          <i data-lucide="plus"></i>
          Create Your First Project
        </a>
      </div>
    <% } %>
  </div>
  
  <!-- Quick Actions -->
  <div class="dashboard-section">
    <h2>Quick Actions</h2>
    <div class="quick-actions">
      <a href="/projects/new" class="quick-action-card">
        <i data-lucide="plus-circle"></i>
        <span>New Project</span>
      </a>
      <a href="/contractors" class="quick-action-card">
        <i data-lucide="users"></i>
        <span>Find Contractors</span>
      </a>
      <a href="/dashboard/messages" class="quick-action-card">
        <i data-lucide="message-circle"></i>
        <span>Messages</span>
      </a>
      <a href="/dashboard/settings" class="quick-action-card">
        <i data-lucide="settings"></i>
        <span>Settings</span>
      </a>
    </div>
  </div>
</div>

<style>
