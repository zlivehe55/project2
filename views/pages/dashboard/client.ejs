  <div class="hero-content">
    <div class="greeting">
      <span class="greeting-time" id="greeting-time">Good morning</span>
      <h1>Welcome back, <%= user.firstName %>! âœ¨</h1>
      <p class="hero-subtitle">Here's what's happening with your projects today</p>
    </div>
  </div>
  <div class="hero-actions">
    <a href="/projects/new" class="btn btn-primary btn-lg">
      <i data-lucide="plus"></i>
      New Project
    </a>
    <a href="/contractors" class="btn btn-secondary btn-lg">
      <i data-lucide="hard-hat"></i>
      Find Contractors
    </a>
  </div>
</div>

<!-- Stats Row -->
<div class="stats-grid">
  <div class="stat-card gradient-1">
    <div class="stat-card-inner">
      <div class="stat-icon">
        <i data-lucide="folder"></i>
      </div>
      <div class="stat-details">
        <span class="stat-value"><%= stats.totalProjects %></span>
        <span class="stat-label">Total Projects</span>
      </div>
    </div>
    <div class="stat-decoration">
      <svg viewBox="0 0 100 100" preserveAspectRatio="none">
        <circle cx="80" cy="80" r="60" fill="rgba(255,255,255,0.1)"/>
      </svg>
    </div>
  </div>
  
  <div class="stat-card gradient-2">
    <div class="stat-card-inner">
      <div class="stat-icon">
        <i data-lucide="sparkles"></i>
      </div>
      <div class="stat-details">
        <span class="stat-value"><%= stats.totalVariants %></span>
        <span class="stat-label">AI Designs</span>
      </div>
    </div>
    <div class="stat-decoration">
      <svg viewBox="0 0 100 100" preserveAspectRatio="none">
        <circle cx="80" cy="80" r="60" fill="rgba(255,255,255,0.1)"/>
      </svg>
    </div>
  </div>
  
  <div class="stat-card gradient-3">
    <div class="stat-card-inner">
      <div class="stat-icon">
        <i data-lucide="clock"></i>
      </div>
      <div class="stat-details">
        <span class="stat-value"><%= stats.inProgress %></span>
        <span class="stat-label">In Progress</span>
      </div>
    </div>
    <div class="stat-decoration">
      <svg viewBox="0 0 100 100" preserveAspectRatio="none">
        <circle cx="80" cy="80" r="60" fill="rgba(255,255,255,0.1)"/>
      </svg>
    </div>
  </div>
  
  <div class="stat-card gradient-4">
    <div class="stat-card-inner">
      <div class="stat-icon">
        <i data-lucide="check-circle"></i>
      </div>
      <div class="stat-details">
        <span class="stat-value"><%= stats.completedDesigns %></span>
        <span class="stat-label">Completed</span>
      </div>
    </div>
    <div class="stat-decoration">
      <svg viewBox="0 0 100 100" preserveAspectRatio="none">
        <circle cx="80" cy="80" r="60" fill="rgba(255,255,255,0.1)"/>
      </svg>
    </div>
  </div>
</div>

<!-- Main Dashboard Content -->
<div class="dashboard-content">
  <!-- Left Column -->
  <div class="dashboard-main">
    <!-- AI Credits Card -->
    <div class="credits-banner">
      <div class="credits-icon">
        <i data-lucide="zap"></i>
      </div>
      <div class="credits-info">
        <div class="credits-header">
          <span class="credits-title">AI Generation Credits</span>
          <span class="credits-plan"><%= user.subscription?.plan || 'Free' %> Plan</span>
        </div>
        <div class="credits-progress">
          <div class="credits-bar">
            <div class="credits-fill" style="width: <%= user.isPremium ? '100' : '30' %>%"></div>
          </div>
          <span class="credits-count">
            <strong><%= user.subscription?.credits || 3 %></strong> 
            <%= user.isPremium ? 'unlimited' : 'of 10 credits remaining' %>
          </span>
        </div>
      </div>
      <a href="/pricing" class="btn btn-accent btn-sm">
        <i data-lucide="arrow-up-right"></i>
        <%= user.isPremium ? 'Manage' : 'Upgrade' %>
      </a>
    </div>
    
    <!-- Recent Projects -->
    <div class="section-card">
      <div class="section-header">
        <h2><i data-lucide="folder-open"></i> Recent Projects</h2>
        <a href="/projects" class="view-all">View All <i data-lucide="arrow-right"></i></a>
      </div>
      
      <% if (projects && projects.length > 0) { %>
        <div class="projects-grid-compact">
          <% projects.slice(0, 4).forEach(project => { %>
            <a href="/projects/<%= project._id %>" class="project-card-compact">
              <div class="project-image">
                <% if (project.designVariants && project.designVariants.length > 0) { %>
                  <img src="<%= project.designVariants[project.designVariants.length - 1].imageUrl || project.designVariants[project.designVariants.length - 1].thumbnailUrl %>" alt="<%= project.title %>">
                <% } else if (project.originalImages && project.originalImages.length > 0) { %>
                  <img src="<%= project.originalImages[0].url %>" alt="<%= project.title %>">
                <% } else { %>
                  <div class="project-placeholder">
                    <i data-lucide="image"></i>
                  </div>
                <% } %>
                <span class="project-badge <%= project.status %>"><%= project.status %></span>
              </div>
              <div class="project-info">
                <h3><%= project.title %></h3>
                <div class="project-tags">
                  <span><i data-lucide="home"></i> <%= project.roomType %></span>
                  <% if (project.style) { %>
                    <span><i data-lucide="palette"></i> <%= project.style %></span>
                  <% } %>
                </div>
              </div>
              <div class="project-hover-action">
                <span class="btn btn-primary btn-sm">
                  <% if (project.status === 'draft' || project.status === 'pending') { %>
                    <i data-lucide="sparkles"></i> Generate
                  <% } else { %>
                    <i data-lucide="eye"></i> View
                  <% } %>
                </span>
              </div>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-projects">
          <div class="empty-icon">
            <i data-lucide="folder-plus"></i>
          </div>
          <h3>Start Your First Project</h3>
          <p>Upload a photo of any room and let AI create stunning design variations</p>
          <a href="/projects/new" class="btn btn-primary">
            <i data-lucide="plus"></i>
            Create Project
          </a>
        </div>
      <% } %>
    </div>
  </div>
  
  <!-- Right Column -->
  <div class="dashboard-sidebar">
    <!-- Quick Actions -->
    <div class="section-card">
      <div class="section-header">
        <h2><i data-lucide="zap"></i> Quick Actions</h2>
      </div>
      <div class="quick-actions">
        <a href="/projects/new" class="quick-action-item">
          <div class="action-icon gradient-1">
            <i data-lucide="plus-circle"></i>
          </div>
          <span>New Project</span>
        </a>
        <a href="/contractors" class="quick-action-item">
          <div class="action-icon gradient-2">
            <i data-lucide="hard-hat"></i>
          </div>
          <span>Find Contractors</span>
        </a>
        <a href="/dashboard/messages" class="quick-action-item">
          <div class="action-icon gradient-3">
            <i data-lucide="message-square"></i>
          </div>
          <span>Messages</span>
        </a>
        <a href="/gallery" class="quick-action-item">
          <div class="action-icon gradient-4">
            <i data-lucide="images"></i>
          </div>
          <span>Inspiration</span>
        </a>
      </div>
    </div>
    
    <!-- Recent Activity -->
    <div class="section-card">
      <div class="section-header">
        <h2><i data-lucide="activity"></i> Recent Activity</h2>
      </div>
      <div class="activity-timeline">
        <% if (recentActivity && recentActivity.length > 0) { %>
          <% recentActivity.forEach(activity => { %>
            <div class="activity-item">
              <div class="activity-dot <%= activity.type %>"></div>
              <div class="activity-content">
                <p><%= activity.message %></p>
                <span class="activity-time"><%= activity.time %></span>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-activity">
            <p>No recent activity</p>
          </div>
        <% } %>
      </div>
    </div>
    
    <!-- Upgrade CTA -->
    <% if (!user.isPremium) { %>
      <div class="upgrade-card">
        <div class="upgrade-glow"></div>
        <div class="upgrade-content">
          <span class="upgrade-badge">PRO</span>
          <h3>Unlock Full Potential</h3>
          <ul class="upgrade-features">
            <li><i data-lucide="check"></i> Unlimited AI generations</li>
            <li><i data-lucide="check"></i> HD quality exports</li>
            <li><i data-lucide="check"></i> Priority support</li>
            <li><i data-lucide="check"></i> Advanced styles</li>
          </ul>
          <a href="/pricing" class="btn btn-upgrade">
            <i data-lucide="crown"></i>
            Upgrade Now
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

