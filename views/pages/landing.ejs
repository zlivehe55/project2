<!-- How It Works -->
<section id="how-it-works" class="how-section">
  <div class="section-header">
    <span class="section-badge">How It Works</span>
    <h2 class="section-title">From Photo to<br><span class="gradient-text">Dream Room</span></h2>
    <p class="section-subtitle">Transform any space in just 4 simple steps.</p>
  </div>
  
  <div class="steps-container">
    <div class="step-card">
      <div class="step-number">01</div>
      <div class="step-icon">
        <i data-lucide="upload-cloud"></i>
      </div>
      <h3>Upload Your Photo</h3>
      <p>Take a photo of any room you want to redesign and upload it to our platform.</p>
    </div>
    
    <div class="step-connector">
      <i data-lucide="arrow-right"></i>
    </div>
    
    <div class="step-card">
      <div class="step-number">02</div>
      <div class="step-icon">
        <i data-lucide="pencil-ruler"></i>
      </div>
      <h3>Describe Your Vision</h3>
      <p>Tell us your style preferences, budget, and must-haves. Use our guided form or free text.</p>
    </div>
    
    <div class="step-connector">
      <i data-lucide="arrow-right"></i>
    </div>
    
    <div class="step-card">
      <div class="step-number">03</div>
      <div class="step-icon">
        <i data-lucide="sparkles"></i>
      </div>
      <h3>AI Creates Designs</h3>
      <p>Our AI generates photorealistic mockups of your redesigned space in seconds.</p>
    </div>
    
    <div class="step-connector">
      <i data-lucide="arrow-right"></i>
    </div>
    
    <div class="step-card">
      <div class="step-number">04</div>
      <div class="step-icon">
        <i data-lucide="hammer"></i>
      </div>
      <h3>Make It Real</h3>
      <p>DIY with our materials guide or connect with verified contractors to build your dream.</p>
    </div>
  </div>
</section>

<!-- Room Types -->
<section class="rooms-section">
  <div class="section-header">
    <span class="section-badge">Room Types</span>
    <h2 class="section-title">Design Any Room<br><span class="gradient-text">In Your Home</span></h2>
  </div>
  
  <div class="rooms-grid">
    <% if (typeof roomTypes !== 'undefined' && roomTypes) { %>
      <% roomTypes.forEach(room => { %>
        <div class="room-card">
          <div class="room-icon">
            <i data-lucide="<%= room.icon %>"></i>
          </div>
          <span><%= room.name %></span>
        </div>
      <% }) %>
    <% } else { %>
      <div class="room-card"><div class="room-icon"><i data-lucide="sofa"></i></div><span>Living Room</span></div>
      <div class="room-card"><div class="room-icon"><i data-lucide="bed"></i></div><span>Bedroom</span></div>
      <div class="room-card"><div class="room-icon"><i data-lucide="utensils"></i></div><span>Kitchen</span></div>
      <div class="room-card"><div class="room-icon"><i data-lucide="bath"></i></div><span>Bathroom</span></div>
      <div class="room-card"><div class="room-icon"><i data-lucide="briefcase"></i></div><span>Office</span></div>
      <div class="room-card"><div class="room-icon"><i data-lucide="tree"></i></div><span>Outdoor</span></div>
    <% } %>
  </div>
</section>

<!-- Design Styles -->
<section class="styles-section">
  <div class="section-header">
    <span class="section-badge">Design Styles</span>
    <h2 class="section-title">Explore<br><span class="gradient-text">14+ Unique Styles</span></h2>
    <p class="section-subtitle">From modern minimalism to cozy rustic charm.</p>
  </div>
  
  <div class="styles-carousel">
    <% if (typeof styles !== 'undefined' && styles) { %>
      <% styles.slice(0, 8).forEach(style => { %>
        <div class="style-card">
          <div class="style-preview"></div>
          <h4><%= style.name %></h4>
          <p><%= style.description %></p>
        </div>
      <% }) %>
    <% } %>
  </div>
</section>

