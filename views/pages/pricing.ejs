<script>
  // Billing period toggle
  const toggleBtns = document.querySelectorAll('.toggle-btn');
  const priceAmount = document.querySelector('.popular-card .price-amount');
  const billedText = document.querySelector('.billed-text');
  
  toggleBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      toggleBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      
      const period = btn.dataset.period;
      if (priceAmount && billedText) {
        priceAmount.textContent = '€' + priceAmount.dataset[period];
        billedText.textContent = billedText.dataset[period];
      }
    });
  });
  
  // Credit pack selection
  const creditPacks = document.querySelectorAll('.credit-pack');
  creditPacks.forEach(pack => {
    pack.addEventListener('click', () => {
      creditPacks.forEach(p => p.classList.remove('selected'));
      pack.classList.add('selected');
    });
  });
</script>

