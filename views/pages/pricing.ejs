<!-- Pricing Hero -->
<section class="pricing-hero">
  <div class="container">
    <span class="hero-badge">
      <i data-lucide="sparkles"></i>
      Transparent Pricing
    </span>
    <h1>Choose Your <span class="gradient-text">Perfect Plan</span></h1>
    <p class="hero-subtitle">Start free with 3 AI generations, or unlock the full power of AI interior design.</p>
    
    <!-- Billing Toggle for Advanced Plan -->
    <div class="billing-toggle">
      <button class="toggle-btn active" data-period="monthly">Monthly</button>
      <button class="toggle-btn" data-period="quarterly">Quarterly <span class="save-badge">Save 14%</span></button>
      <button class="toggle-btn" data-period="yearly">Yearly <span class="save-badge">Save 31%</span></button>
    </div>
  </div>
  
  <div class="hero-bg">
    <div class="gradient-orb hero-orb-1"></div>
    <div class="gradient-orb hero-orb-2"></div>
  </div>
