<!-- Main Pricing Section -->
<section class="pricing-section">
  <div class="container">
    <!-- Pricing Cards Grid -->
    <div class="pricing-grid">
      
      <!-- Free Plan -->
      <div class="pricing-card">
        <div class="card-header">
          <span class="plan-name"><%= plans.free.name %></span>
          <span class="plan-subtitle"><%= plans.free.subtitle %></span>
        </div>
        <div class="card-price">
          <span class="price-amount">€0</span>
          <span class="price-period">forever</span>
        </div>
        <p class="plan-description"><%= plans.free.description %></p>
        <ul class="features-list">
          <% plans.free.features.forEach(feature => { %>
            <li class="<%= feature.included ? '' : 'disabled' %>">
              <i data-lucide="<%= feature.included ? 'check' : 'x' %>"></i>
              <%= feature.text %>
            </li>
          <% }) %>
        </ul>
        <a href="<%= plans.free.ctaLink %>" class="btn btn-secondary btn-full"><%= plans.free.cta %></a>
      </div>
      
      <!-- Partner Plan (Full Service) -->
      <div class="pricing-card partner-card">
        <% if (plans.partner.badge) { %>
          <span class="card-badge"><%= plans.partner.badge %></span>
        <% } %>
        <div class="card-header">
          <span class="plan-name"><%= plans.partner.name %></span>
          <span class="plan-subtitle"><%= plans.partner.subtitle %></span>
        </div>
        <div class="card-price">
          <span class="price-amount">€0</span>
          <span class="price-period">with contract</span>
        </div>
        <p class="plan-description"><%= plans.partner.description %></p>
        <ul class="features-list">
          <% plans.partner.features.forEach(feature => { %>
            <li class="<%= feature.included ? '' : 'disabled' %>">
              <i data-lucide="<%= feature.included ? 'check' : 'x' %>"></i>
              <%= feature.text %>
            </li>
          <% }) %>
        </ul>
        <a href="<%= plans.partner.ctaLink %>" class="btn btn-outline btn-full">
          <i data-lucide="hard-hat"></i>
          <%= plans.partner.cta %>
        </a>
        <p class="plan-note">Sign a contract with a partner contractor to unlock full access</p>
      </div>
      
      <!-- Advanced Plan (Popular) -->
      <div class="pricing-card popular-card">
        <% if (plans.advanced.badge) { %>
          <span class="card-badge popular"><%= plans.advanced.badge %></span>
        <% } %>
        <div class="popular-ribbon">Most Popular</div>
        <div class="card-header">
          <span class="plan-name"><%= plans.advanced.name %></span>
          <span class="plan-subtitle"><%= plans.advanced.subtitle %></span>
        </div>
        <div class="card-price">
          <span class="price-amount" data-monthly="<%= plans.advanced.prices.monthly %>" data-quarterly="<%= Math.round(plans.advanced.prices.quarterly / 3) %>" data-yearly="<%= Math.round(plans.advanced.prices.yearly / 12) %>">€<%= plans.advanced.prices.monthly %></span>
          <span class="price-period">/month</span>
        </div>
        <div class="price-note">
          <span class="billed-text" data-monthly="Billed monthly" data-quarterly="€<%= plans.advanced.prices.quarterly %> billed quarterly" data-yearly="€<%= plans.advanced.prices.yearly %> billed yearly">Billed monthly</span>
        </div>
        <p class="plan-description"><%= plans.advanced.description %></p>
        <ul class="features-list">
          <% plans.advanced.features.forEach(feature => { %>
            <li class="<%= feature.included ? '' : 'disabled' %>">
              <i data-lucide="<%= feature.included ? 'check' : 'x' %>"></i>
              <%= feature.text %>
            </li>
          <% }) %>
        </ul>
        <a href="<%= plans.advanced.ctaLink %>" class="btn btn-primary btn-full">
          <i data-lucide="sparkles"></i>
          <%= plans.advanced.cta %>
        </a>
        <p class="plan-note">7-day free trial • Cancel anytime</p>
      </div>
      
      <!-- Credits Plan -->
      <div class="pricing-card credits-card">
        <% if (plans.credits.badge) { %>
          <span class="card-badge"><%= plans.credits.badge %></span>
        <% } %>
        <div class="card-header">
          <span class="plan-name"><%= plans.credits.name %></span>
          <span class="plan-subtitle"><%= plans.credits.subtitle %></span>
        </div>
        <div class="card-price credits-price">
          <span class="price-label">Starting from</span>
          <span class="price-amount">€<%= plans.credits.creditPacks[0].price %></span>
          <span class="price-period">for <%= plans.credits.creditPacks[0].credits %> credits</span>
        </div>
        
        <!-- Credit Packs -->
        <div class="credit-packs">
          <% plans.credits.creditPacks.forEach((pack, index) => { %>
            <label class="credit-pack <%= index === 1 ? 'selected' : '' %>">
              <input type="radio" name="creditPack" value="<%= pack.credits %>" <%= index === 1 ? 'checked' : '' %>>
              <div class="pack-content">
                <span class="pack-credits"><%= pack.credits %> credits</span>
                <span class="pack-price">€<%= pack.price %></span>
                <span class="pack-per-credit">€<%= pack.perCredit.toFixed(2) %>/credit</span>
              </div>
            </label>
          <% }) %>
        </div>
        
        <p class="plan-description"><%= plans.credits.description %></p>
        <ul class="features-list compact">
          <% plans.credits.features.forEach(feature => { %>
            <li class="<%= feature.included ? '' : 'disabled' %>">
              <i data-lucide="<%= feature.included ? 'check' : 'x' %>"></i>
              <%= feature.text %>
            </li>
          <% }) %>
        </ul>
        <a href="<%= plans.credits.ctaLink %>" class="btn btn-secondary btn-full"><%= plans.credits.cta %></a>
      </div>
      
    </div>
  </div>
</section>

