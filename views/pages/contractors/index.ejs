    align-items: center;
    margin-bottom: var(--spacing-xl);
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }
  
  .filter-tags {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }
  
