    .search-form {
      flex-direction: column;
      border-radius: var(--radius-lg);
    }
    
    .search-input-wrapper {
      padding: var(--spacing-md);
    }
    
    .search-select {
      margin: 0 var(--spacing-sm);
    }
    
    .contractors-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  function contactContractor(contractorId) {
    <% if (typeof user !== 'undefined' && user) { %>
      window.location.href = `/dashboard/messages?contractor=${contractorId}`;
    <% } else { %>
      window.location.href = `/auth/login?redirect=/contractors&message=Please login to contact contractors`;
    <% } %>
  }
</script>

