<!-- Hero Section -->
<section class="contractors-hero">
  <div class="container">
    <div class="hero-content">
      <span class="hero-badge">
        <i data-lucide="hard-hat"></i>
        Verified Professionals
      </span>
      <h1>Find Trusted Contractors<br>For Your <span class="gradient-text">Renovation Project</span></h1>
      <p class="hero-subtitle">Connect with vetted interior designers, contractors, and craftsmen who can bring your AI-generated designs to life.</p>
      
      <!-- Search Box -->
      <div class="contractor-search">
        <form action="/contractors" method="GET" class="search-form">
          <div class="search-input-wrapper">
            <i data-lucide="search"></i>
            <input type="text" name="q" placeholder="Search by specialty or location..." value="<%= typeof query !== 'undefined' ? query : '' %>" class="search-input">
          </div>
          <select name="specialty" class="search-select">
            <option value="">All Specialties</option>
            <% if (typeof specialties !== 'undefined') { %>
              <% specialties.forEach(spec => { %>
                <option value="<%= spec %>" <%= typeof filters !== 'undefined' && filters.specialty === spec ? 'selected' : '' %>><%= spec %></option>
              <% }) %>
            <% } %>
          </select>
          <button type="submit" class="btn btn-primary">
            <i data-lucide="search"></i>
            Search
          </button>
        </form>
      </div>
    </div>
  </div>
  
  <div class="hero-bg">
    <div class="gradient-orb hero-orb-1"></div>
    <div class="gradient-orb hero-orb-2"></div>
  </div>
</section>

<!-- Filters & Results -->
<section class="contractors-section">
  <div class="container">
    <!-- Filter Tags -->
    <div class="filter-bar">
      <div class="filter-tags">
        <button class="filter-tag active" data-filter="all">All</button>
        <button class="filter-tag" data-filter="interior-design">Interior Design</button>
        <button class="filter-tag" data-filter="general-contractor">General Contractor</button>
        <button class="filter-tag" data-filter="kitchen-bath">Kitchen & Bath</button>
        <button class="filter-tag" data-filter="electrical">Electrical</button>
        <button class="filter-tag" data-filter="plumbing">Plumbing</button>
      </div>
      
      <div class="sort-dropdown">
        <select name="sort" id="sortSelect">
          <option value="rating">Highest Rated</option>
          <option value="reviews">Most Reviews</option>
          <option value="newest">Newest</option>
        </select>
      </div>
    </div>
    
    <!-- Results Count -->
    <div class="results-info">
      <p>Showing <strong><%= typeof contractors !== 'undefined' ? contractors.length : 0 %></strong> contractors</p>
    </div>
    
    <!-- Contractors Grid -->
    <div class="contractors-grid">
      <% if (typeof contractors !== 'undefined' && contractors.length > 0) { %>
        <% contractors.forEach(contractor => { %>
          <article class="contractor-card">
            <div class="contractor-header">
              <div class="contractor-avatar">
                <% if (contractor.logo) { %>
                  <img src="<%= contractor.logo %>" alt="<%= contractor.companyName %>">
                <% } else { %>
                  <span><%= contractor.companyName.charAt(0) %></span>
                <% } %>
                <% if (contractor.isVerified) { %>
                  <span class="verified-badge" title="Verified Contractor">
                    <i data-lucide="badge-check"></i>
                  </span>
                <% } %>
              </div>
              <div class="contractor-info">
                <h3><%= contractor.companyName %></h3>
                <p class="contractor-tagline"><%= contractor.tagline || 'Professional Contractor' %></p>
              </div>
            </div>
            
            <div class="contractor-body">
              <div class="contractor-stats">
                <div class="stat">
                  <i data-lucide="star"></i>
                  <span><%= contractor.rating?.average?.toFixed(1) || 'N/A' %></span>
                  <span class="stat-label">(<%= contractor.rating?.count || 0 %> reviews)</span>
                </div>
                <div class="stat">
                  <i data-lucide="map-pin"></i>
                  <span><%= contractor.location?.city || 'France' %></span>
                </div>
              </div>
              
              <div class="contractor-specialties">
                <% (contractor.specialties || []).slice(0, 3).forEach(spec => { %>
                  <span class="specialty-tag"><%= spec %></span>
                <% }) %>
                <% if (contractor.specialties && contractor.specialties.length > 3) { %>
                  <span class="specialty-tag more">+<%= contractor.specialties.length - 3 %></span>
                <% } %>
              </div>
              
              <p class="contractor-bio"><%= contractor.bio ? contractor.bio.substring(0, 120) + '...' : 'No bio available' %></p>
            </div>
            
            <div class="contractor-footer">
              <a href="/contractors/<%= contractor.slug %>" class="btn btn-secondary">
                View Profile
              </a>
              <button class="btn btn-primary" onclick="contactContractor('<%= contractor._id %>')">
                <i data-lucide="message-square"></i>
                Contact
              </button>
            </div>
          </article>
        <% }) %>
      <% } else { %>
        <!-- Empty State -->
        <div class="empty-state">
          <div class="empty-state-icon">
            <i data-lucide="hard-hat"></i>
          </div>
          <h3>No contractors found</h3>
          <p>We couldn't find any contractors matching your criteria. Try adjusting your filters or check back later.</p>
          <a href="/contractors" class="btn btn-secondary">Clear Filters</a>
        </div>
      <% } %>
    </div>
    
    <!-- Pagination -->
    <% if (typeof pagination !== 'undefined' && pagination.pages > 1) { %>
      <div class="pagination">
        <% if (pagination.page > 1) { %>
          <a href="/contractors?page=<%= pagination.page - 1 %>" class="pagination-btn">
            <i data-lucide="chevron-left"></i>
          </a>
        <% } %>
        
        <% for (let i = 1; i <= pagination.pages; i++) { %>
          <a href="/contractors?page=<%= i %>" class="pagination-btn <%= pagination.page === i ? 'active' : '' %>">
            <%= i %>
          </a>
        <% } %>
        
        <% if (pagination.page < pagination.pages) { %>
          <a href="/contractors?page=<%= pagination.page + 1 %>" class="pagination-btn">
            <i data-lucide="chevron-right"></i>
          </a>
        <% } %>
      </div>
    <% } %>
  </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
  <div class="cta-bg">
    <div class="gradient-orb cta-orb-1"></div>
    <div class="gradient-orb cta-orb-2"></div>
  </div>
  <div class="cta-content">
    <h2>Are You a Contractor?</h2>
    <p>Join CraftyCrib and connect with homeowners who have ready-to-build AI designs.</p>
    <a href="/auth/register?role=contractor" class="btn btn-primary btn-lg">
      <i data-lucide="building-2"></i>
      Join as Contractor
    </a>
    <p class="cta-note">Free to join • Get qualified leads • Build your portfolio</p>
  </div>
</section>

