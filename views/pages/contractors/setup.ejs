<div class="page-container">
  <div class="page-header">
    <h1>Set Up Your Contractor Profile</h1>
    <p class="text-muted">Complete your profile to start receiving project requests</p>
  </div>
  
  <form action="/contractors/setup" method="POST" enctype="multipart/form-data" class="setup-form">
    <!-- Basic Info -->
    <div class="form-section">
      <h2><span class="step-num">1</span> Business Information</h2>
      
      <div class="form-group">
        <label class="form-label">Company Name *</label>
        <input type="text" name="companyName" class="form-input" placeholder="Your Company Name" required>
      </div>
      
      <div class="form-group">
        <label class="form-label">Description *</label>
        <textarea name="description" class="form-textarea" rows="4" placeholder="Describe your services and expertise..." required></textarea>
      </div>
      
      <div class="form-group">
        <label class="form-label">Specialties *</label>
        <div class="checkbox-grid">
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Interior Design">
            <span>Interior Design</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="General Contractor">
            <span>General Contractor</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Kitchen & Bath">
            <span>Kitchen & Bath</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Electrical">
            <span>Electrical</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Plumbing">
            <span>Plumbing</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Flooring">
            <span>Flooring</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Painting">
            <span>Painting</span>
          </label>
          <label class="checkbox-item">
            <input type="checkbox" name="specialties" value="Carpentry">
            <span>Carpentry</span>
          </label>
        </div>
      </div>
      
      <div class="form-group">
        <label class="form-label">Years of Experience</label>
        <input type="number" name="experienceYears" class="form-input" placeholder="10" min="0">
      </div>
    </div>
    
    <!-- Contact -->
    <div class="form-section">
      <h2><span class="step-num">2</span> Contact Information</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label class="form-label">Phone Number</label>
          <input type="tel" name="phone" class="form-input" placeholder="+1 (555) 123-4567">
        </div>
        <div class="form-group">
          <label class="form-label">Website</label>
          <input type="url" name="website" class="form-input" placeholder="https://yourcompany.com">
        </div>
      </div>
    </div>
    
    <!-- Location -->
    <div class="form-section">
      <h2><span class="step-num">3</span> Service Area</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label class="form-label">City</label>
          <input type="text" name="city" class="form-input" placeholder="New York">
        </div>
        <div class="form-group">
          <label class="form-label">State</label>
          <input type="text" name="state" class="form-input" placeholder="NY">
        </div>
      </div>
      
      <div class="form-group">
        <label class="form-label">Service Cities</label>
        <input type="text" name="serviceCities" class="form-input" placeholder="Manhattan, Brooklyn, Queens">
        <p class="form-hint">Separate cities with commas</p>
      </div>
      
      <div class="form-group">
        <label class="form-label">Service Radius (miles)</label>
        <input type="number" name="serviceRadius" class="form-input" placeholder="50" min="1">
      </div>
    </div>
    
    <!-- Pricing -->
    <div class="form-section">
      <h2><span class="step-num">4</span> Pricing</h2>
      
      <div class="form-row">
        <div class="form-group">
          <label class="form-label">Hourly Rate ($)</label>
          <input type="number" name="hourlyRate" class="form-input" placeholder="75" min="0">
        </div>
        <div class="form-group">
          <label class="form-label">Minimum Project ($)</label>
          <input type="number" name="minimumProject" class="form-input" placeholder="500" min="0">
        </div>
      </div>
    </div>
    
    <!-- Portfolio -->
    <div class="form-section">
      <h2><span class="step-num">5</span> Portfolio</h2>
      
      <div class="form-group">
        <label class="form-label">Upload Portfolio Images</label>
        <div class="upload-area">
          <input type="file" name="portfolioImages" id="portfolioImages" multiple accept="image/*" class="file-input">
          <label for="portfolioImages" class="upload-label">
            <i data-lucide="upload-cloud"></i>
            <span>Drop images here or click to browse</span>
            <span class="upload-hint">Max 10 images, 5MB each</span>
          </label>
        </div>
      </div>
    </div>
    
    <!-- Submit -->
    <div class="form-actions">
      <button type="submit" class="btn btn-primary btn-lg">
        <i data-lucide="check"></i>
        Create Profile
      </button>
    </div>
  </form>
</div>

