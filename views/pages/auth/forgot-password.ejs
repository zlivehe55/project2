<div class="auth-form">
  <div class="auth-form-header">
    <h2>Forgot Password?</h2>
    <p>Enter your email and we'll send you a reset link</p>
  </div>
  
  <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <div class="error-list">
      <ul>
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>
  
  <form action="/auth/forgot-password" method="POST">
    <div class="form-group">
      <label class="form-label">Email Address</label>
      <div class="input-icon-wrapper">
        <span class="input-icon"><i data-lucide="mail"></i></span>
        <input 
          type="email" 
          name="email" 
          class="form-input" 
          placeholder="you@example.com"
          required
          autocomplete="email"
        >
      </div>
    </div>
    
    <button type="submit" class="btn btn-primary btn-block btn-lg">
      <i data-lucide="send"></i>
      Send Reset Link
    </button>
  </form>
  
  <div style="text-align: center; margin-top: var(--spacing-xl);">
    <a href="/auth/login" style="color: var(--text-secondary);">
      <i data-lucide="arrow-left" style="width: 16px; height: 16px; vertical-align: middle;"></i>
      Back to Login
    </a>
  </div>
</div>

