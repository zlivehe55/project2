<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
  
  <title><%= typeof title !== 'undefined' ? title : 'Dashboard - CraftyCrib' %></title>
  <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Manage your AI-powered interior design projects.' %>">
  <meta name="robots" content="noindex, nofollow">
  
  <link rel="icon" type="image/png" href="/assets/logoicon.png">
  <link rel="apple-touch-icon" href="/assets/logoicon.png">
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  <script>
    (function() {
      const savedTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = savedTheme || (systemPrefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
      window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (!localStorage.getItem('theme')) {
          document.documentElement.setAttribute('data-theme', e.matches ? 'dark' : 'light');
        }
      });
    })();
  </script>
  
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
  <!-- Mobile Header -->
  <header class="mobile-header">
    <button class="menu-toggle" id="menu-toggle" aria-label="Menu">
      <i data-lucide="menu"></i>
    </button>
    
    <a href="/" class="mobile-logo">
      <img src="/assets/logoicon.png" alt="CraftyCrib" width="28" height="28">
      <span>CraftyCrib</span>
    </a>
    
    <div class="mobile-header-actions">
      <button class="mobile-icon-btn" id="mobile-search-btn" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"></path></svg>
      </button>
      <a href="/dashboard/notifications" class="mobile-icon-btn" aria-label="Notifications">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"></path><path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"></path></svg>
      </a>
      <a href="/dashboard/settings" class="mobile-avatar">
        <%= user.firstName.charAt(0) %><%= user.lastName.charAt(0) %>
      </a>
    </div>
  </header>

  <!-- Mobile Search Overlay -->
  <div class="search-overlay" id="search-overlay">
    <div class="search-modal">
      <div class="search-modal-header">
        <div class="search-input-wrapper">
          <i data-lucide="search"></i>
          <input type="text" id="global-search" placeholder="Search projects, contractors..." autofocus>
        </div>
        <button class="search-close-btn" id="search-close">Cancel</button>
      </div>
      <div class="search-results" id="search-results">
        <div class="search-hint">
          <p>Try searching for:</p>
          <div class="search-suggestions">
            <button class="search-tag">Kitchen renovation</button>
            <button class="search-tag">Bathroom</button>
            <button class="search-tag">Modern design</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar Overlay -->
  <div class="sidebar-overlay" id="sidebar-overlay"></div>

  <!-- Sidebar -->
  <aside class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <a href="/" class="sidebar-logo">
        <img src="/assets/logoicon.png" alt="CraftyCrib" width="32" height="32">
        <span>CraftyCrib</span>
      </a>
      <button class="sidebar-close" id="sidebar-close">
        <i data-lucide="x"></i>
      </button>
    </div>
    
    <nav class="sidebar-nav">
      <div class="nav-group">
        <span class="nav-label">Menu</span>
        <a href="/dashboard" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
          <i data-lucide="layout-dashboard"></i>
          <span>Tableau de bord</span>
        </a>
        
        <% if (user.role === 'client' || user.role === 'homeowner') { %>
          <a href="/projects" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'projects' ? 'active' : '' %>">
            <i data-lucide="folder"></i>
            <span>Mes projets</span>
          </a>
          <a href="/projects/new" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'new-project' ? 'active' : '' %>">
            <i data-lucide="plus-circle"></i>
            <span>Nouveau projet</span>
          </a>
          <a href="/contractors" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'contractors' ? 'active' : '' %>">
            <i data-lucide="hard-hat"></i>
            <span>Entrepreneurs</span>
          </a>
          
          <!-- Idées/Inspiration Dropdown -->
          <div class="nav-dropdown <%= typeof activePage !== 'undefined' && activePage === 'inspiration' ? 'active' : '' %>">
            <button class="nav-link nav-dropdown-toggle">
              <i data-lucide="lightbulb"></i>
              <span>Idées / Inspiration</span>
              <i data-lucide="chevron-down" class="dropdown-arrow"></i>
            </button>
            <div class="nav-dropdown-menu">
              <a href="/inspiration/cuisine" class="nav-dropdown-item <%= typeof inspirationType !== 'undefined' && inspirationType === 'cuisine' ? 'active' : '' %>">
                <i data-lucide="cooking-pot"></i>
                <span>Cuisine</span>
              </a>
              <a href="/inspiration/salon" class="nav-dropdown-item <%= typeof inspirationType !== 'undefined' && inspirationType === 'salon' ? 'active' : '' %>">
                <i data-lucide="sofa"></i>
                <span>Salon</span>
              </a>
              <a href="/inspiration/chambre" class="nav-dropdown-item <%= typeof inspirationType !== 'undefined' && inspirationType === 'chambre' ? 'active' : '' %>">
                <i data-lucide="bed"></i>
                <span>Chambre</span>
              </a>
              <a href="/inspiration/salle-de-bain" class="nav-dropdown-item <%= typeof inspirationType !== 'undefined' && inspirationType === 'salle-de-bain' ? 'active' : '' %>">
                <i data-lucide="bath"></i>
                <span>Salle de bain</span>
              </a>
              <a href="/inspiration/exterieur" class="nav-dropdown-item <%= typeof inspirationType !== 'undefined' && inspirationType === 'exterieur' ? 'active' : '' %>">
                <i data-lucide="trees"></i>
                <span>Extérieur</span>
              </a>
            </div>
          </div>
        <% } else if (user.role === 'contractor') { %>
          <a href="/contractors/projects/available" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'available-projects' ? 'active' : '' %>">
            <i data-lucide="briefcase"></i>
            <span>Projets disponibles</span>
          </a>
          <a href="/contractors/my-projects" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'my-projects' ? 'active' : '' %>">
            <i data-lucide="folder-check"></i>
            <span>Mes projets</span>
          </a>
          <a href="/contractors/profile" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'profile' ? 'active' : '' %>">
            <i data-lucide="building-2"></i>
            <span>Profil entreprise</span>
          </a>
        <% } %>
      </div>
      
      <div class="nav-group">
        <span class="nav-label">Communication</span>
        <a href="/dashboard/messages" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'messages' ? 'active' : '' %>">
          <i data-lucide="message-square"></i>
          <span>Messages</span>
          <% if (typeof unreadMessages !== 'undefined' && unreadMessages > 0) { %>
            <span class="badge"><%= unreadMessages %></span>
          <% } %>
        </a>
        <a href="/dashboard/notifications" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'notifications' ? 'active' : '' %>">
          <i data-lucide="bell"></i>
          <span>Notifications</span>
        </a>
      </div>
      
      <div class="nav-group">
        <span class="nav-label">Compte</span>
        <a href="/dashboard/settings" class="nav-link <%= typeof activePage !== 'undefined' && activePage === 'settings' ? 'active' : '' %>">
          <i data-lucide="settings"></i>
          <span>Paramètres</span>
        </a>
        <a href="/pricing" class="nav-link">
          <i data-lucide="crown"></i>
          <span>Passer Pro</span>
          <span class="badge pro">PRO</span>
        </a>
      </div>
    </nav>
    
    <div class="sidebar-footer">
      <div class="user-profile">
        <div class="user-avatar">
          <%= user.firstName.charAt(0) %><%= user.lastName.charAt(0) %>
        </div>
        <div class="user-details">
          <span class="user-name"><%= user.firstName %> <%= user.lastName %></span>
          <span class="user-role"><%= user.role === 'contractor' ? 'Entrepreneur' : 'Propriétaire' %></span>
        </div>
      </div>
      <a href="/auth/logout" class="logout-link">
        <i data-lucide="log-out"></i>
        <span>Déconnexion</span>
      </a>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="main-content" id="main-content">
    <!-- Flash Messages -->
    <% if (typeof success_msg !== 'undefined' && success_msg && success_msg.length > 0) { %>
      <div class="toast toast-success">
        <i data-lucide="check-circle"></i>
        <span><%= success_msg %></span>
        <button class="toast-close"><i data-lucide="x"></i></button>
      </div>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg && error_msg.length > 0) { %>
      <div class="toast toast-error">
        <i data-lucide="alert-circle"></i>
        <span><%= error_msg %></span>
        <button class="toast-close"><i data-lucide="x"></i></button>
      </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
      <div class="toast toast-error">
        <i data-lucide="alert-circle"></i>
        <span><%= error %></span>
        <button class="toast-close"><i data-lucide="x"></i></button>
      </div>
    <% } %>
    
    <!-- Page Content -->
    <div class="page-wrapper">
      <%- body %>
    </div>
  </main>

  <!-- Mobile Bottom Navigation -->
  <nav class="mobile-nav">
    <a href="/dashboard" class="mobile-nav-item <%= typeof activePage !== 'undefined' && activePage === 'dashboard' ? 'active' : '' %>">
      <i data-lucide="home"></i>
      <span>Accueil</span>
    </a>
    <a href="/projects" class="mobile-nav-item <%= typeof activePage !== 'undefined' && activePage === 'projects' ? 'active' : '' %>">
      <i data-lucide="folder"></i>
      <span>Projets</span>
    </a>
    <a href="/projects/new" class="mobile-nav-item mobile-nav-primary">
      <i data-lucide="plus"></i>
    </a>
    <a href="/dashboard/messages" class="mobile-nav-item <%= typeof activePage !== 'undefined' && activePage === 'messages' ? 'active' : '' %>">
      <i data-lucide="message-square"></i>
      <span>Messages</span>
    </a>
    <a href="/dashboard/settings" class="mobile-nav-item <%= typeof activePage !== 'undefined' && activePage === 'settings' ? 'active' : '' %>">
      <i data-lucide="user"></i>
      <span>Profil</span>
    </a>
  </nav>

  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
    
    const sidebar = document.getElementById('sidebar');
    const overlay = document.getElementById('sidebar-overlay');
    const menuToggle = document.getElementById('menu-toggle');
    const sidebarClose = document.getElementById('sidebar-close');
    
    function openSidebar() {
      sidebar.classList.add('open');
      overlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
    
    function closeSidebar() {
      sidebar.classList.remove('open');
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    menuToggle?.addEventListener('click', openSidebar);
    sidebarClose?.addEventListener('click', closeSidebar);
    overlay?.addEventListener('click', closeSidebar);
    
    // Close sidebar on nav link click (mobile)
    document.querySelectorAll('.sidebar .nav-link').forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth <= 1024) {
          closeSidebar();
        }
      });
    });
    
    // Close sidebar on resize to desktop
    window.addEventListener('resize', () => {
      if (window.innerWidth > 1024) {
        closeSidebar();
      }
    });
    
    // Toast close
    document.querySelectorAll('.toast-close').forEach(btn => {
      btn.addEventListener('click', () => {
        btn.closest('.toast').remove();
      });
    });
    
    // Search modal
    const searchBtn = document.getElementById('mobile-search-btn');
    const searchOverlay = document.getElementById('search-overlay');
    const searchClose = document.getElementById('search-close');
    const globalSearch = document.getElementById('global-search');
    
    function openSearch() {
      searchOverlay?.classList.add('active');
      document.body.style.overflow = 'hidden';
      setTimeout(() => globalSearch?.focus(), 100);
    }
    
    function closeSearch() {
      searchOverlay?.classList.remove('active');
      document.body.style.overflow = '';
    }
    
    searchBtn?.addEventListener('click', openSearch);
    searchClose?.addEventListener('click', closeSearch);
    searchOverlay?.addEventListener('click', (e) => {
      if (e.target === searchOverlay) closeSearch();
    });
    
    // Search tags
    document.querySelectorAll('.search-tag').forEach(tag => {
      tag.addEventListener('click', () => {
        if (globalSearch) globalSearch.value = tag.textContent;
        globalSearch?.focus();
      });
    });
    
    // Nav Dropdown Toggle
    document.querySelectorAll('.nav-dropdown-toggle').forEach(toggle => {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        const dropdown = toggle.closest('.nav-dropdown');
        dropdown.classList.toggle('open');
      });
    });
    
    // Auto-open dropdown if a child is active
    document.querySelectorAll('.nav-dropdown').forEach(dropdown => {
      const hasActiveItem = dropdown.querySelector('.nav-dropdown-item.active');
      if (hasActiveItem) {
        dropdown.classList.add('open');
      }
    });

    // Theme toggle in settings
    const themeToggle = document.getElementById('dashboard-theme-toggle');
    if (themeToggle) {
      const currentTheme = document.documentElement.getAttribute('data-theme');
      themeToggle.checked = currentTheme === 'dark';
      themeToggle.addEventListener('change', () => {
        const newTheme = themeToggle.checked ? 'dark' : 'light';
        document.documentElement.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        }
      });
    }
  </script>
</body>
</html>
