<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- SEO Meta Tags -->
  <title><%= typeof title !== 'undefined' ? title : 'CraftyCrib - Connexion' %></title>
  <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Accédez à votre compte CraftyCrib pour créer des designs d\'intérieur avec l\'IA.' %>">
  <meta name="robots" content="noindex, nofollow">
  
  <!-- Open Graph -->
  <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib' %>">
  <meta property="og:description" content="Plateforme de design d'intérieur propulsée par l'IA">
  <meta property="og:type" content="website">
  <meta property="og:image" content="/assets/fullogo.png">
  <meta property="og:site_name" content="CraftyCrib">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/logoicon.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/logoicon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/logoicon.png">
  <meta name="theme-color" content="#10b981">
  <script>
    (function() {
      const savedTheme = localStorage.getItem('theme');
      const systemPrefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
      const theme = savedTheme || (systemPrefersDark ? 'dark' : 'light');
      document.documentElement.setAttribute('data-theme', theme);
      window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', (e) => {
        if (!localStorage.getItem('theme')) {
          document.documentElement.setAttribute('data-theme', e.matches ? 'dark' : 'light');
        }
      });
    })();
  </script>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  
  <!-- Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>
