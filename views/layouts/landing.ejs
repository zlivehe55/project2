<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
  <!-- Primary SEO Meta Tags -->
  <title><%= typeof title !== 'undefined' ? title : 'CraftyCrib - AI-Powered Interior Design' %></title>
  <meta name="title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib - AI-Powered Interior Design' %>">
  <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Transform your living space with AI-powered interior design. Upload a photo, get instant 3D mockups, and connect with professional contractors.' %>">
  <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'AI interior design, home renovation, room visualization, 3D mockups, contractor marketplace, smart home design, virtual staging, interior decorating' %>">
  <meta name="author" content="CraftyCrib">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://craftycrib.com' %>">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://craftycrib.com' %>">
  <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib - AI-Powered Interior Design' %>">
  <meta property="og:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Transform your living space with AI-powered interior design. Upload a photo, get instant 3D mockups, and connect with professional contractors.' %>">
  <meta property="og:image" content="https://craftycrib.com/images/og-image.png">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:site_name" content="CraftyCrib">
  <meta property="og:locale" content="en_US">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://craftycrib.com' %>">
  <meta name="twitter:title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib - AI-Powered Interior Design' %>">
  <meta name="twitter:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Transform your living space with AI-powered interior design. Upload a photo, get instant 3D mockups, and connect with professional contractors.' %>">
  <meta name="twitter:image" content="https://craftycrib.com/images/og-image.png">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/logoicon.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/logoicon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/logoicon.png">
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#00ff88">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  
  <!-- Main Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/landing.css">
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "CraftyCrib",
    "applicationCategory": "DesignApplication",
    "description": "AI-powered interior design platform that helps you visualize and transform your living spaces with instant 3D mockups and professional contractor connections.",
    "url": "https://craftycrib.com",
    "logo": "https://craftycrib.com/assets/fullogo.png",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "EUR",
      "description": "Free tier available with 3 AI generations per month"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.8",
      "ratingCount": "1250"
    }
  }
  </script>
</head>
<body class="landing-page">
  <!-- Navigation -->
  <nav class="navbar navbar-landing">
    <div class="nav-container">
      <a href="/" class="nav-logo" aria-label="CraftyCrib Home">
        <img src="/assets/logoicon.png" alt="CraftyCrib Logo" class="logo-icon" width="40" height="40">
        <span class="logo-text">CraftyCrib</span>
      </a>
      
      <div class="nav-links" id="nav-links">
        <a href="#features" class="nav-link">Features</a>
        <a href="#how-it-works" class="nav-link">How It Works</a>
        <a href="/pricing" class="nav-link">Pricing</a>
        <a href="/contractors" class="nav-link">Contractors</a>
      </div>
      
      <div class="nav-actions">
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/dashboard" class="btn btn-ghost">Dashboard</a>
        <% } else { %>
          <a href="/auth/login" class="btn btn-ghost">Login</a>
          <a href="/auth/register" class="btn btn-primary">
            <i data-lucide="sparkles"></i>
            Get Started Free
          </a>
        <% } %>
      </div>
      
      <button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Toggle menu">
        <i data-lucide="menu"></i>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="mobile-nav" id="mobile-nav">
      <a href="#features" class="mobile-nav-link">Features</a>
      <a href="#how-it-works" class="mobile-nav-link">How It Works</a>
      <a href="/pricing" class="mobile-nav-link">Pricing</a>
      <a href="/contractors" class="mobile-nav-link">Contractors</a>
      <div class="mobile-nav-divider"></div>
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/dashboard" class="mobile-nav-link">Dashboard</a>
      <% } else { %>
        <a href="/auth/login" class="mobile-nav-link">Login</a>
        <a href="/auth/register" class="btn btn-primary" style="width: 100%; margin-top: 1rem;">Get Started Free</a>
      <% } %>
    </div>
  </nav>

  <!-- Main Content -->
  <main id="main-content">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="footer" role="contentinfo">
    <div class="footer-container">
      <div class="footer-brand">
        <a href="/" aria-label="CraftyCrib Home">
          <img src="/assets/logoicon.png" alt="CraftyCrib" class="footer-logo" width="48" height="48">
        </a>
        <p>Transform your living space with AI-powered interior design.</p>
        <div class="social-links" role="navigation" aria-label="Social media links">
          <a href="#" aria-label="Follow us on Twitter"><i data-lucide="twitter"></i></a>
          <a href="#" aria-label="Follow us on Instagram"><i data-lucide="instagram"></i></a>
          <a href="#" aria-label="Follow us on LinkedIn"><i data-lucide="linkedin"></i></a>
        </div>
      </div>
      
      <div class="footer-links">
        <div class="footer-col">
          <h4>Product</h4>
          <a href="#how-it-works">How It Works</a>
          <a href="/pricing">Pricing</a>
          <a href="/contractors">Find Contractors</a>
          <a href="/auth/register">Get Started</a>
        </div>
        <div class="footer-col">
          <h4>Company</h4>
          <a href="/about">About Us</a>
          <a href="/contact">Contact</a>
          <a href="#">Careers</a>
          <a href="#">Press</a>
        </div>
        <div class="footer-col">
          <h4>Legal</h4>
          <a href="/privacy">Privacy Policy</a>
          <a href="/terms">Terms of Service</a>
          <a href="#">Cookie Policy</a>
        </div>
        <div class="footer-col">
          <h4>Support</h4>
          <a href="#">Help Center</a>
          <a href="#">FAQ</a>
          <a href="/contact">Contact Support</a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> CraftyCrib. All rights reserved.</p>
      <p class="footer-tagline">Made with <span style="color: var(--accent-primary);">â™¥</span> in Europe</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
    
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileNav = document.getElementById('mobile-nav');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileNav.classList.toggle('active');
      const icon = mobileMenuBtn.querySelector('i');
      if (mobileNav.classList.contains('active')) {
        icon.setAttribute('data-lucide', 'x');
      } else {
        icon.setAttribute('data-lucide', 'menu');
      }
      lucide.createIcons();
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          // Close mobile nav if open
          mobileNav?.classList.remove('active');
        }
      });
    });
    
    // Navbar scroll effect
    const navbar = document.querySelector('.navbar');
    let lastScroll = 0;
    
    window.addEventListener('scroll', () => {
      const currentScroll = window.pageYOffset;
      
      if (currentScroll > 100) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
      
      lastScroll = currentScroll;
    });
  </script>
</body>
</html>
