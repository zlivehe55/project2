<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
  
  <!-- Primary SEO Meta Tags -->
  <title><%= typeof title !== 'undefined' ? title : 'CraftyCrib - Design Intérieur propulsé par l\'IA' %></title>
  <meta name="title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib - Design Intérieur propulsé par l\'IA' %>">
  <meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Réinventez votre intérieur avec Criby, l\'IA de CraftyCrib. Téléchargez une photo, obtenez des maquettes 3D instantanées et connectez-vous avec des professionnels qualifiés.' %>">
  <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'design intérieur IA, rénovation maison, visualisation 3D, maquettes instantanées, entrepreneurs professionnels, décoration intérieure, staging virtuel' %>">
  <meta name="author" content="CraftyCrib">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://craftycrib.com' %>">
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://craftycrib.com' %>">
  <meta property="og:title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib - Design Intérieur propulsé par l\'IA' %>">
  <meta property="og:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Réinventez votre intérieur avec Criby, l\'IA de CraftyCrib. Téléchargez une photo, obtenez des maquettes 3D instantanées.' %>">
  <meta property="og:image" content="https://craftycrib.com/images/og-image.png">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:site_name" content="CraftyCrib">
  <meta property="og:locale" content="fr_FR">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="<%= typeof canonicalUrl !== 'undefined' ? canonicalUrl : 'https://craftycrib.com' %>">
  <meta name="twitter:title" content="<%= typeof title !== 'undefined' ? title : 'CraftyCrib - Design Intérieur propulsé par l\'IA' %>">
  <meta name="twitter:description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : 'Réinventez votre intérieur avec Criby, l\'IA de CraftyCrib.' %>">
  <meta name="twitter:image" content="https://craftycrib.com/images/og-image.png">
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/logoicon.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/logoicon.png">
  <link rel="apple-touch-icon" sizes="180x180" href="/assets/logoicon.png">
  <link rel="manifest" href="/manifest.json">
  <meta name="theme-color" content="#10b981">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  
  <!-- Main Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/landing.css">
  
  <!-- JSON-LD Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "name": "CraftyCrib",
    "applicationCategory": "DesignApplication",
    "description": "Plateforme de design intérieur propulsée par l'IA Criby qui vous aide à visualiser et transformer vos espaces de vie avec des maquettes 3D instantanées.",
    "url": "https://craftycrib.com",
    "logo": "https://craftycrib.com/assets/fullogo.png",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "EUR",
      "description": "Version gratuite disponible avec 3 générations IA par mois"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": "4.8",
      "ratingCount": "1250"
    }
  }
  </script>
</head>
<body class="landing-page">
  <!-- Navigation -->
  <nav class="navbar navbar-landing">
    <div class="nav-container">
      <a href="/" class="nav-logo" aria-label="CraftyCrib Accueil">
        <img src="/assets/logoicon.png" alt="CraftyCrib Logo" class="logo-icon" width="32" height="32">
        <span class="logo-text">CraftyCrib</span>
      </a>
      
      <div class="nav-links" id="nav-links">
        <a href="#features" class="nav-link">Fonctionnalités</a>
        <a href="#how-it-works" class="nav-link">Comment ça marche</a>
        <a href="#pricing" class="nav-link">Tarifs</a>
        <a href="/contractors" class="nav-link">Entrepreneurs</a>
      </div>
      
      <div class="nav-actions">
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/dashboard" class="btn btn-ghost">Tableau de bord</a>
        <% } else { %>
          <a href="/auth/login" class="btn btn-ghost">Connexion</a>
          <a href="/auth/register" class="btn btn-primary">
            Commencer
          </a>
        <% } %>
      </div>
      
      <button class="mobile-menu-btn" id="mobile-menu-btn" aria-label="Ouvrir le menu">
        <i data-lucide="menu"></i>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div class="mobile-nav" id="mobile-nav">
      <a href="#features" class="mobile-nav-link">Fonctionnalités</a>
      <a href="#how-it-works" class="mobile-nav-link">Comment ça marche</a>
      <a href="#pricing" class="mobile-nav-link">Tarifs</a>
      <a href="/contractors" class="mobile-nav-link">Entrepreneurs</a>
      <div class="mobile-nav-divider"></div>
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/dashboard" class="mobile-nav-link">Tableau de bord</a>
      <% } else { %>
        <a href="/auth/login" class="mobile-nav-link">Connexion</a>
        <a href="/auth/register" class="btn btn-primary" style="width: 100%; margin-top: 0.75rem; justify-content: center;">Commencer gratuitement</a>
      <% } %>
    </div>
  </nav>

  <!-- Main Content -->
  <main id="main-content">
    <%- body %>
  </main>

  <!-- Footer -->
  <footer class="footer" role="contentinfo">
    <div class="footer-container">
      <div class="footer-brand">
        <a href="/" aria-label="CraftyCrib Accueil">
          <img src="/assets/logoicon.png" alt="CraftyCrib" class="footer-logo" width="40" height="40">
        </a>
        <p>Transformez votre espace de vie avec le design intérieur propulsé par l'IA.</p>
        <div class="social-links" role="navigation" aria-label="Réseaux sociaux">
          <a href="#" aria-label="Suivez-nous sur Twitter"><i data-lucide="twitter"></i></a>
          <a href="#" aria-label="Suivez-nous sur Instagram"><i data-lucide="instagram"></i></a>
          <a href="#" aria-label="Suivez-nous sur LinkedIn"><i data-lucide="linkedin"></i></a>
        </div>
      </div>
      
      <div class="footer-links">
        <div class="footer-col">
          <h4>Produit</h4>
          <a href="#how-it-works">Comment ça marche</a>
          <a href="#pricing">Tarifs</a>
          <a href="/contractors">Entrepreneurs</a>
          <a href="/auth/register">Commencer</a>
        </div>
        <div class="footer-col">
          <h4>Entreprise</h4>
          <a href="/about">À propos</a>
          <a href="/contact">Contact</a>
          <a href="#">Carrières</a>
          <a href="#">Presse</a>
        </div>
        <div class="footer-col">
          <h4>Légal</h4>
          <a href="/privacy">Politique de confidentialité</a>
          <a href="/terms">Conditions d'utilisation</a>
          <a href="#">Politique des cookies</a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; <%= new Date().getFullYear() %> CraftyCrib. Tous droits réservés.</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
    
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileNav = document.getElementById('mobile-nav');
    
    mobileMenuBtn?.addEventListener('click', () => {
      mobileNav.classList.toggle('active');
      const icon = mobileMenuBtn.querySelector('i');
      if (mobileNav.classList.contains('active')) {
        icon.setAttribute('data-lucide', 'x');
      } else {
        icon.setAttribute('data-lucide', 'menu');
      }
      lucide.createIcons();
    });
    
    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
      if (!mobileMenuBtn?.contains(e.target) && !mobileNav?.contains(e.target)) {
        mobileNav?.classList.remove('active');
        const icon = mobileMenuBtn?.querySelector('i');
        if (icon) {
          icon.setAttribute('data-lucide', 'menu');
          lucide.createIcons();
        }
      }
    });
    
    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function(e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({ behavior: 'smooth', block: 'start' });
          mobileNav?.classList.remove('active');
          const icon = mobileMenuBtn?.querySelector('i');
          if (icon) {
            icon.setAttribute('data-lucide', 'menu');
            lucide.createIcons();
          }
        }
      });
    });
    
    // Navbar scroll effect
    const navbar = document.querySelector('.navbar');
    
    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 50) {
        navbar.classList.add('scrolled');
      } else {
        navbar.classList.remove('scrolled');
      }
    });
  </script>
</body>
</html>
