<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="CraftyCrib - Transform your living space with AI-powered interior design. Get realistic 3D mockups and connect with professional contractors.">
  <title><%= typeof title !== 'undefined' ? title : 'CraftyCrib - AI Interior Design' %></title>
  
  <!-- Favicon -->
  <link rel="icon" type="image/png" href="/assets/logoicon.png">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Lucide Icons -->
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
  
  <!-- Main Styles -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/landing.css">
</head>
<body class="landing-page">
  <!-- Navigation -->
  <nav class="navbar navbar-landing">
    <div class="nav-container">
      <a href="/" class="nav-logo">
        <img src="/assets/logoicon.png" alt="CraftyCrib" class="logo-icon">
        <span class="logo-text">CraftyCrib</span>
      </a>
      
      <div class="nav-links">
        <a href="#features" class="nav-link">Features</a>
        <a href="#how-it-works" class="nav-link">How It Works</a>
        <a href="#pricing" class="nav-link">Pricing</a>
        <a href="/contractors" class="nav-link">Contractors</a>
      </div>
      
      <div class="nav-actions">
        <% if (typeof user !== 'undefined' && user) { %>
          <a href="/dashboard" class="btn btn-ghost">Dashboard</a>
        <% } else { %>
          <a href="/auth/login" class="btn btn-ghost">Login</a>
          <a href="/auth/register" class="btn btn-primary">
            <i data-lucide="sparkles"></i>
            Get Started Free
          </a>
        <% } %>
      </div>
      
      <button class="mobile-menu-btn">
        <i data-lucide="menu"></i>
      </button>
    </div>
  </nav>

  <!-- Main Content -->
  <%- body %>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-container">
      <div class="footer-brand">
        <img src="/assets/logoicon.png" alt="CraftyCrib" class="footer-logo">
        <p>Transform your living space with AI-powered interior design.</p>
        <div class="social-links">
          <a href="#"><i data-lucide="twitter"></i></a>
          <a href="#"><i data-lucide="instagram"></i></a>
          <a href="#"><i data-lucide="linkedin"></i></a>
        </div>
      </div>
      
      <div class="footer-links">
        <div class="footer-col">
          <h4>Product</h4>
          <a href="#how-it-works">How It Works</a>
          <a href="#pricing">Pricing</a>
          <a href="/contractors">Find Contractors</a>
        </div>
        <div class="footer-col">
          <h4>Company</h4>
          <a href="/about">About Us</a>
          <a href="/contact">Contact</a>
          <a href="#">Careers</a>
        </div>
        <div class="footer-col">
          <h4>Legal</h4>
          <a href="/privacy">Privacy Policy</a>
          <a href="/terms">Terms of Service</a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; <%= typeof currentYear !== 'undefined' ? currentYear : new Date().getFullYear() %> CraftyCrib. All rights reserved.</p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="/js/main.js"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>

